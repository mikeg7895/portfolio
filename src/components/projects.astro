---
import { Image } from "astro:assets";
import svgl from "../../public/svgl.png";
import stockin from "../../public/stockin.png";
import moviesfordevs from "../../public/moviesfordevs.png";
import tron from "../../public/tron.png";

interface Project {
  title: string;
  image: ImageMetadata;
  link: string;
  status: string;
  description: string;
  techStack: string[];
}

const projects: Project[] = [
  {
    title: "Ecommerce",
    image: moviesfordevs as ImageMetadata,
    link: "https://github.com/mikeg7895/proyecto_go",
    status: "On Development",
    description: "Ecommerce project built with Go and Next JS",
    techStack: ["Go", "Next JS", "Tailwind CSS", "PostgreSQL", "Twilio"],
  },
  {
    title: "Parking Management",
    image: stockin as ImageMetadata,
    link: "https://github.com/mikeg7895/parqueadero",
    status: "On Development",
    description: "Parking Management with .Net, using design patterns",
    techStack: [".Net", "Entity Framework", "SQL Server", "HTML", "CSS", "JavaScript", "Bootstrap"],
  },
  {
    title: "Simple ToDo with practice DevOps",
    image: svgl as ImageMetadata,
    link: "https://github.com/mikeg7895/practice-with-docker",
    status: "On Development",
    description: "Simple ToDo with practice DevOps, hosted on AWS, using IaC",
    techStack: ["Docker", "Git", "GitHub Actions", "AWS", "React", "Terraform", "FastApi"],
  },
  {
    title: "Microservices Architecture",
    image: tron as ImageMetadata,
    link: "https://github.com/mikeg7895/microservicios",
    status: "On Development",
    description: "Microservices Architecture, built with .Net, Spring Boot, and Angular",
    techStack: [".Net", "Spring Boot", "Angular"],
  },
];
---

<section
  id="projects"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">My work</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Projects</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {projects.map((project) => (
        <div class="group p-6 border border-[#ffffff10] rounded-2xl bg-[#111111] hover:shadow-lg transition-shadow duration-300">
          <div class="mb-3">
            <h4 class="text-2xl font-semibold text-white">{project.title}</h4>
            <p class="text-sm text-[var(--white-icon)] italic">{project.status}</p>
          </div>
          <p class="text-sm text-[var(--white-icon)] mb-3">{project.description}</p>
          <div class="text-sm text-[var(--white-icon)] mb-4">
            <ul class="list-disc list-inside space-y-1">
              {project.techStack?.map((tech) => (
                <li>{tech}</li>
              ))}
            </ul>
          </div>
          <div class="flex gap-3">
            <a
              target="_blank"
              href={project.link}
              aria-label="GitHub"
              class="flex items-center gap-2 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out text-sm"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 24 24"
                class="w-5 h-5"
              >
                <path d="M12 0C5.371 0 0 5.371 0 12c0 5.303 3.438 9.8 8.205 11.387.6.111.82-.26.82-.577 0-.285-.011-1.04-.017-2.04-3.338.726-4.042-1.611-4.042-1.611-.546-1.387-1.333-1.757-1.333-1.757-1.089-.745.083-.729.083-.729 1.205.084 1.838 1.238 1.838 1.238 1.07 1.834 2.809 1.304 3.495.997.107-.776.418-1.305.762-1.605-2.665-.304-5.467-1.333-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.536-1.524.117-3.176 0 0 1.008-.322 3.301 1.23a11.52 11.52 0 0 1 3.004-.404c1.019.005 2.046.138 3.003.404 2.291-1.552 3.297-1.23 3.297-1.23.655 1.652.243 2.873.119 3.176.77.84 1.234 1.91 1.234 3.221 0 4.609-2.807 5.625-5.479 5.921.43.372.814 1.102.814 2.222 0 1.606-.015 2.898-.015 3.292 0 .319.216.694.825.576C20.565 21.796 24 17.298 24 12c0-6.629-5.371-12-12-12z" />
              </svg>
              GitHub
            </a>
          </div>
        </div>
      ))}
    </div>
    <a
      target="_blank"
      href="https://github.com/mikeg7895?tab=repositories"
      aria-label="GitHub"
      class="w-full flex items-center justify-center gap-2 mt-9 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)] hover:scale-105"
    >
      <span class="md:text-lg text-md">More projects on</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="size-6"
      >
        <path
          d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"
        ></path>
      </svg>
    </a>
  </div>
</section>
